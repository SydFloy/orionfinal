        source: "images/pp.png"
        radius: [20,]
<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: "#e7e4c0"
    text_color: "#4a4939"
    icon_color: "#4a4939"
    ripple_color: "#c5bdd2"
    selected_color: "#0c6c4d"


<DrawerLabelItem@MDNavigationDrawerItem>
    text_color: "#4a4939"
    icon_color: "#4a4939"
    focus_behavior: False
    selected_color: "#4a4939"
    _no_ripple_effect: True

<MyScreenManager>:
    HomeScreen:
        name: 'home_screen'
    AboutScreen:
        name: 'about_screen'
    FabScreen:
        name: 'fab_screen'
    DisScreen:
        name:'dis_screen'
    GeaScreen:
